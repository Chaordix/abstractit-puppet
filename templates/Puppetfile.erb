forge "http://forge.puppetlabs.com"

## forge modules
<% @forge_mods.keys.sort.each do |key| -%>
## <%= key %>
mod '<%= forge_mods[key]['module'] %>', '<%= forge_mods[key]['version'] %>'
<% end -%>

## upstream modules
<% @upstream_mods.keys.sort.each do |key| -%>
## <%= key %>
mod '<%= key %>',
  :git => '<%= upstream_mods[key]['source'] %>/<%= upstream_mods[key]['module'] %>',
  :ref => '<% if upstream_mods[key]['version'] %><%= upstream_mods[key]['version'] %><% else %><%= @branch %><% end %>'
<% end -%>

## local modules
<% @local_mods.each do |local_mod| -%>
# <%= local_mod %>
mod '<%= local_mod %>',
    :git => "https://bitbucket.org/pivitptyltd/puppet-<%= local_mod %>",
    :ref => "<%= @branch %>"
<% end %>

