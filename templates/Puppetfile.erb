forge "http://forge.puppetlabs.com"

## forge modules
<% @forge_module_hash.each_pair do |key, value_hash| -%>
## <%= key %>
mod '<%= value_hash['module'] %>', '<%= value_hash['version'] %>'
<% end -%>

## upstream modules
<% @upstream_module_hash.each_pair do |key, value_hash| -%>
## <%= key %>
mod '<%= key %>',
  :git => '<%= value_hash['source'] %>/<%= value_hash['module'] %>',
  :ref => '<% if value_hash['version'] %><%= value_hash['version'] %><% else %><%= @branch %><% end %>'
<% end -%>

## local modules
<% @local_modules.each do |local_module| -%>
# <%= local_module %>
mod '<%= local_module %>',
    :git => "https://bitbucket.org/pivitptyltd/puppet-<%= local_module %>",
    :ref => "<%= @branch %>"
<% end %>

