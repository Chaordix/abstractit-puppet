forge "http://forge.puppetlabs.com"

## forge modules
<% @module_hash.each_pair do |key, value_hash| -%>
## <%= key %>
mod '<%= value_hash['module'] %>', '<%= value_hash['version'] %>'
<% end -%>

<% if @forge_modules =~ /^development$/ -%>
## upstream modules in development
#mod 'darin/rt', '0.0.7'
mod 'rt',
  :git => "https://github.com/abstractitptyltd/puppet-rt"
  :ref => "<%= branch %>"

<% end -%>
