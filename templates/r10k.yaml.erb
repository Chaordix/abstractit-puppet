:cachedir: /var/cache/r10k
:sources:
  hiera:
    prefix: false
    basedir: "<%= @hieradata_path %>"
    remote: "<%= @hiera_repo %>"
<%- @r10k_sources.keys.sort.each do |key| -%>
  <%= key %>:
    prefix: false
    basedir: <%= @r10k_env_basedir %>/<%= key %>
    remote: "<%= @r10k_sources[key]['repo'] %>"
<%- end -%>

:purgedirs:
  - <%= @r10k_env_basedir %>
  - <%= @hieradata_path %>
