---
:logger: console
:backends:
<%- if @eyaml -%>
  - eyaml
<%- end -%>
  - yaml

:hierarchy:
<%- @hierarchy.each do |file| -%>
  - "<%= file %>"
<%- end -%>

<%- if @eyaml -%>
:eyaml:
  :datadir: "<%= @hiera_eyaml_path %>"
  :pkcs7_private_key: /etc/puppet/keys/eyaml/private_key.pkcs7.pem
  :pkcs7_public_key:  /etc/puppet/keys/eyaml/public_key.pkcs7.pem
<%- end -%>

:yaml:
  :datadir: "<%= @hiera_yaml_path %>"
